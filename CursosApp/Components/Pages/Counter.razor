@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<h3>Prueba</h3>

<p role="status">Current count: @currentCount</p>
@if(currentCount > 400)
{
    <p>Que numero grandote!</p>
}

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-primary" @onclick="DuplicarValor">Duplicar</button>
<button class="btn btn-primary" @onclick="MitadValor">Dividir mitad</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void DuplicarValor()
    {
        currentCount *= 2;
    }

    private void MitadValor()
    {
        currentCount /= 2;
    }
}
